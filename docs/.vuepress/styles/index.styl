input {
    cursor: text;
    width: 10rem;
    height: 2rem;
    color: #f5f5f5;
    display: inline-block;
    border: 1px solid #404040;
    border-radius: 2rem;
    font-size: 0.9rem;
    line-height: 2rem;
    padding: 0 0.5rem 0 2rem;s
    outline: none;
    transition: all 0.2s ease;
    background: #fff 0.6rem 0.5rem no-repeat;
    background-size: 1rem;
}

input[type="text"],input[type="number"],  {
    color: #1e1d45;
}

