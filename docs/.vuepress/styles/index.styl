// Toggle Switch
input.switch {
    display: none;
}
label {
    cursor: pointer;
    display: block;
    border: 1px solid #00ff00;
    border-radius: 11px;
    width: 40px;
    height: 20px;
    position: relative;
    transition: all 0.2s;
}
label:after {
    content: '';
    background-color: #FFF;
    border: 1px solid #1e1d45;
    border-radius: 10px;
    width: 18px;
    height: 18px;
    position: absolute;
    top: 0;
    left: 0;
    transition: all 0.2s;
}
input:checked + label {
    background-color: #00ff00;
    border-color: #00ff00;
    box-shadow: rgba(0, 255, 0, 0.6) 0px 0px 7px;
}
input:checked + label:after {
    left: 20px;
    border-color: #00ff00;
}
 