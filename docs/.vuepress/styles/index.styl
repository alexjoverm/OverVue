/// Components

// Button
button {
    padding: 10px 20px;
    background-color: #1e1d45;
    color: #ffffff;
    border: 1px solid #00ff00
    border-radius: 0.7rem;
    margin-bottom: 20px

}

button.large {
    min-width: 50%;
    margin: 1rem auto;
}

button:focus {outline:0;}

button:hover {
    padding: 10px 20px;
    background-color: #00ff00;
    border: 1px solid #1e1d45;
    color: #1e1d45;
    box-shadow: rgba(0, 255, 0, 0.6) 0px 0px 7px;
}

// Input
input {
    cursor: text;
    width: 10rem;
    height: 2rem;
    color: white;
    background-color: #1e1d45;
    display: inline-block;
    border: 1px solid white;
    border-radius: 0.7rem;
    font-size: 0.9rem;
    line-height: 2rem;
    padding: 0 0.5rem 0 2rem;
    outline: none;
    transition: all 0.2s ease;
    background-size: 1rem;
    margin: 5px 0px;
    min-width: 50%;
}


// Text area
textarea, {
    border-radius: 0.7rem;
    min-width: 90%;
    margin: 0 auto;
    min-height: 150px;
    line-height: 28px;
    font-size: 17px;
    padding: 3%;
    color: white ;
    background-color: #1e1d45;
    display: block;
    margin-left: auto;
    margin-right: auto;
    margin-top: 10px;
    border: 1px solid white;
    
}

textarea:focus, input:focus {
    border-radius: 0.7rem;
    border: 1px solid #0f0;
    outline: none;
    box-shadow: #0f0 0px 0px 7px;
    color: #0f0;
}

legend {
    font-weight: 800;
    margin-top: 10px;
}

// Checkbox

input[type='checkbox'] {
    width: 1rem;
    height: 1rem;
    margin-bottom: 12px;
}

input:checked + label {
    color: #1e1d45;
}

// Radio

input[type='radio'] {
    width: 1rem;
    height: 1rem;
    margin-bottom: 12px;
}

// Select
.select-css {
    display: block;
    font-size: 14px;
    padding: 0.6em 1.4em 0.5em 0.8em;
    min-width: 290px;
    margin-top: 20px;
    background-color: #100d23;
    color: white;
    height: 37px;
}

// Toggle Switch
input.switch, input.switch-template, input.switchShow {
    display: none;
}
label.toggle {
    cursor: pointer;
    display: block;
    border: 1px solid #00ff00;
    border-radius: 0.7rem;
    width: 40px;
    height: 20px;
    position: relative;
    transition: all 0.2s;
}
label.toggle:after {
    content: '';
    background-color: #FFF;
    border: 1px solid #1e1d45;
    border-radius: 0.7rem;
    width: 18px;
    height: 18px;
    position: absolute;
    top: 0;
    left: 0;
    transition: all 0.2s;
}
input:checked + label {
    background-color: #00ff00;
    border-color: #00ff00;
    box-shadow: rgba(0, 255, 0, 0.6) 0px 0px 7px;
}
input:checked + label:after {
    left: 20px;
    border-color: #00ff00;
}
 
